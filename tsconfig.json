{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "module": "CommonJS",
    "lib": ["es2017"],
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "@constants/*": ["./src/constants/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "@routes/*": ["./src/routes/*"],
      "@screens/*": ["./src/screens/*"],
      "@services/*": ["./src/api/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],  
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
  ],
}
